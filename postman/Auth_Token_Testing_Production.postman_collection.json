					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer 25|xbkT35SPs401wTngSTIgmmh0znxWFDFvoq0vALK41f5b2b37",
						"type": "text",
						"description": "Use the token from LOGIN response, NOT the hash from database"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/me",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"me"
					]
				},
				"description": "Test a specific token. IMPORTANT: Use the token from login response (like 25|xbkT35...), NOT the hashed value from database!"
			},
			"response": []
		},
		{
			"name": "8. DEBUG - Check Auth Header Reception",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer TEST_TOKEN_12345",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/debug-auth",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"debug-auth"
					]
				},
				"description": "DEBUG: Check if server receives Authorization header. If all values show 'NOT SET', the header is being stripped by cPanel/Apache."
			},
			"response": []
		}
